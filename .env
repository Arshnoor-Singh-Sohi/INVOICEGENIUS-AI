GOOGLE_API_KEY="AIzaSyDPkjPnh7Q9DDDhXzHpAMczl3gHSljOPVE"


# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug logging (true/false)
DEBUG=true

# Application name and version
APP_NAME=InvoiceGenius AI
APP_VERSION=2.0.0

# ============================================================================
# PROCESSING CONFIGURATION
# ============================================================================
# Maximum file size for uploads (in MB)
MAX_FILE_SIZE_MB=50

# Default AI model to use
# Options: gemini-1.5-pro-latest, gemini-1.5-flash-latest, gemini-pro
DEFAULT_GEMINI_MODEL=gemini-1.5-pro-latest

# Default confidence threshold (0.0 to 1.0)
DEFAULT_CONFIDENCE_THRESHOLD=0.85

# Enable OCR fallback for poor quality images (true/false)
ENABLE_OCR_FALLBACK=true

# Maximum processing time per invoice (seconds)
MAX_PROCESSING_TIME_SECONDS=300

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# Enable malware scanning (true/false)
SCAN_UPLOADS_FOR_MALWARE=true

# Data retention period (days)
DATA_RETENTION_DAYS=365

# Enable input sanitization (true/false)
ENABLE_INPUT_SANITIZATION=true

# Rate limiting (requests per minute)
API_RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Database URL (SQLite by default, can be changed to PostgreSQL, MySQL)
DATABASE_URL=sqlite:///data/invoices.db

# Enable database query logging (true/false)
DATABASE_ECHO=false

# Auto-backup frequency (hours)
BACKUP_FREQUENCY_HOURS=24

# Maximum number of backup files to keep
MAX_BACKUP_FILES=7

# ============================================================================
# EXPORT SETTINGS
# ============================================================================
# Default export format (excel, pdf, json, csv)
DEFAULT_EXPORT_FORMAT=excel

# Include charts in Excel exports (true/false)
EXCEL_INCLUDE_CHARTS=true

# PDF page size (A4, Letter)
PDF_PAGE_SIZE=A4

# Company name for reports
COMPANY_NAME=Invoices

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================
# Enable analytics caching (true/false)
ENABLE_ANALYTICS_CACHING=true

# Analytics cache duration (hours)
ANALYTICS_CACHE_HOURS=1

# Enable performance monitoring (true/false)
ENABLE_PERFORMANCE_MONITORING=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Maximum log file size (MB)
MAX_LOG_SIZE_MB=100

# Number of log files to keep
LOG_FILE_COUNT=5

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable batch processing (true/false)
ENABLE_BATCH_PROCESSING=true

# Enable duplicate detection (true/false)
ENABLE_DUPLICATE_DETECTION=true

# Enable vendor analysis (true/false)
ENABLE_VENDOR_ANALYSIS=true

# Enable cash flow forecasting (true/false)
ENABLE_CASH_FLOW_FORECASTING=true

# Enable anomaly detection (true/false)
ENABLE_ANOMALY_DETECTION=true

# ============================================================================
# UI CUSTOMIZATION
# ============================================================================
# Primary brand color (hex color)
PRIMARY_COLOR=#366092

# Secondary brand color (hex color)
SECONDARY_COLOR=#52b788

# Accent color (hex color)
ACCENT_COLOR=#f77f00

# Enable dark mode support (true/false)
ENABLE_DARK_MODE=false

# Default page layout (wide, centered)
DEFAULT_PAGE_LAYOUT=wide

# ============================================================================
# INTEGRATION SETTINGS
# ============================================================================
# Enable email integration (future feature)
ENABLE_EMAIL_INTEGRATION=false

# Enable cloud storage integration (future feature)
ENABLE_CLOUD_STORAGE=false

# Enable API endpoints (future feature)
ENABLE_API_ENDPOINTS=false

# ============================================================================
# DEVELOPMENT SETTINGS (for developers only)
# ============================================================================
# Enable auto-reload in development (true/false)
ENABLE_AUTO_RELOAD=true

# Enable profiling (true/false)
ENABLE_PROFILING=false

# Enable testing mode (true/false)
TESTING_MODE=false

# Mock AI responses for testing (true/false)
MOCK_AI_RESPONSES=false

